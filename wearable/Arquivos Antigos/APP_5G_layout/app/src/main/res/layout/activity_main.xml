<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <!-- Controle de tempo no topo -->
        <LinearLayout
            android:id="@+id/timeControlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Botão para diminuir (largura compacta) -->
            <Button
                android:id="@+id/buttonDecrease"
                android:layout_width="45dp"
                android:layout_height="34dp"
                android:text="-"
                android:textSize="18sp" />

            <!-- EditText para o intervalo (em segundos) -->
            <EditText
                android:id="@+id/editTextInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:inputType="number"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <!-- Botão para aumentar (largura compacta) -->
            <Button
                android:id="@+id/buttonIncrease"
                android:layout_width="45dp"
                android:layout_height="34dp"
                android:text="+"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Botão de configuração MQTT -->
        <Button
            android:id="@+id/buttonMqttConfig"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:text="MQTT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeControlLayout" />
            
        <!-- Switch para ativar o serviço em segundo plano -->
        <Switch
            android:id="@+id/switchBackground"
            android:layout_width="124dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:text="Executar em segundo plano"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonMqttConfig" />
            
        <!-- Switch para manter a tela sempre ligada -->
        <Switch
            android:id="@+id/switchKeepScreenOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tela ligada"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchBackground" />

        <!-- MapView para exibição da localização atual -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/switchKeepScreenOn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão para acessar a tela de métricas -->
        <Button
            android:id="@+id/buttonViewMetrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Medidas"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/mapView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
