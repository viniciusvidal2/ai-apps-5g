<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Controle de tempo no topo -->

    <!-- ViewPager2 para exibir as métricas em páginas verticais -->

    <LinearLayout
        android:id="@+id/timeControlLayout"
        android:layout_width="178dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botão para diminuir (largura compacta) -->
        <Button
            android:id="@+id/buttonDecrease"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="-" />

        <!-- EditText para o intervalo (em segundos) -->
        <EditText
            android:id="@+id/editTextInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="number"
            android:text="1" />

        <!-- Botão para aumentar (largura compacta) -->
        <Button
            android:id="@+id/buttonIncrease"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMetrics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/timeControlLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
